# Fantasy WAR Configuration Environment Variables
# Copy this file to .env and customize for your setup

# Application Settings
FANTASY_WAR_APP_NAME="Fantasy WAR Calculator"
FANTASY_WAR_DEBUG=false

# Data Settings
FANTASY_WAR_DATA_START_YEAR=2014
FANTASY_WAR_DATA_END_YEAR=  # Leave empty for current year
FANTASY_WAR_DATA_USE_NFL_DATA_PY=true
FANTASY_WAR_DATA_USE_RPY2_FALLBACK=true
FANTASY_WAR_DATA_PARALLEL_JOBS=-1  # -1 uses all available cores

# Cache Settings
FANTASY_WAR_CACHE_ENABLED=true
FANTASY_WAR_CACHE_TTL_DAYS=7
FANTASY_WAR_CACHE_MAX_SIZE_GB=2.0
FANTASY_WAR_CACHE_DIRECTORY=data/cache

# Logging Settings
FANTASY_WAR_LOGGING_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
FANTASY_WAR_LOGGING_FORMAT="{time:YYYY-MM-DD HH:mm:ss} | {level:<8} | {name}:{function}:{line} - {message}"
FANTASY_WAR_LOGGING_ROTATION="100 MB"
FANTASY_WAR_LOGGING_RETENTION="30 days"

# R Integration Settings (for nflfastR/nflreadr)
FANTASY_WAR_R_HOME=  # Path to R installation, leave empty for auto-detection
FANTASY_WAR_R_LIBS=  # Path to R library directory, leave empty for default

# Examples for different systems:
# macOS with Homebrew: /usr/local/lib/R
# Ubuntu: /usr/lib/R  
# Windows: C:/Program Files/R/R-4.3.0
# Conda: ~/miniconda3/lib/R